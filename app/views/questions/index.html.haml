%h1 Questions

<form class="form-search">
<input type="text" class="input-medium search-query" placeholder="Question name">
<button type="submit" class="btn">Search</button>
= link_to 'New question', new_question_path(:format => :js), :class => 'btn', :remote => true
</form>

%table.questions.table.table-hover
  %thead
    %th Type
    %th Question
    %th
    %th
  %tbody
    = render :partial => 'questions/question', :collection => @questions
= paginate @questions
