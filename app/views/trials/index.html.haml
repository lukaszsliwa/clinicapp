%h1 Trials

= form_tag trials_path, :method => :get, :class => 'form-search' do
  = text_field_tag 'q', params[:q], :class => "input-medium search-query", :placeholder => 'Trial name'
  = submit_tag 'Search', :class => 'btn'

= link_to 'New trial', new_trial_path(:format => :js), :class => 'btn', :remote => true

%table.trials.table.table-hover
  %thead
    %th Created at
    %th Name
    %th Start on
    %th Stop on
    %th Patients
  %tbody
    = render :partial => 'trials/trial', :collection => @trials

= paginate @trials
