.modal.hide(id="patient-#{@patient.id}-modal")
  .modal-header
    %h3 #{@patient.trial.try :name} &raquo; #{@patient.name}
  .modal-body
    %p= @patient.name
    %p= @patient.mobile
    %p= @patient.email
    %p= @patient.trial.try :name
    %p
      Eligible:
      = @patient.eligible
    %table.choices.table.table-hover
      %thead
        %th Question
        %th Patient choice
        %th Suggested value
      %tbody
        - @patient.choices.all.each do |choice|
          %tr
            %td= choice.question_text
            %td= choice.patient_value
            %th= choice.suggested_value
  .modal-footer
    = link_to 'Close', '#', :class => 'btn', :data => {:dismiss => 'modal'}
